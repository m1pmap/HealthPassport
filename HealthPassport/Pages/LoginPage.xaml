<Window x:Class="HealthPassport.Pages.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthPassport.Pages"
        mc:Ignorable="d"
        Title="LoginPage" AllowsTransparency="True" Background="Transparent" Height="573" Width="356" WindowStartupLocation="CenterScreen" BorderThickness="0.5" WindowStyle="None" ResizeMode="NoResize" Loaded="Window_Loaded">

    <Window.Resources>
        <!--Стиль для TabControl-->

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" CornerRadius="10" BorderThickness="1.5" BorderBrush="Gray">
                            <ContentPresenter x:Name="ContentSite"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               ContentSource="Header"
                               Margin="25,7"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Состояние для выбранного TabItem -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="FontFamily" Value="Arial Black"/>
                            </Trigger>

                            <!-- Состояние для невыбранного TabItem -->
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#a3a3a4"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontFamily" Value="Arial Black"/>
                            </Trigger>

                            <!-- Состояние при наведении на TabItem -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                     Background="White"
                     BorderBrush="Gray"
                     BorderThickness="2"
                     CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Изменение цвета при фокусе -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="MediumSeaGreen"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--Стиль для кнопки с закруглёнными краями-->
        <ControlTemplate TargetType="Button" x:Key="btTemplate">
            <Border x:Name="border"
                    CornerRadius="10" 
                    Background="{TemplateBinding Background}">
                <Grid 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                    <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center" 
                              Content="{TemplateBinding Content}" 
                              ContentTemplate="{TemplateBinding ContentTemplate}"/>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="LightBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Grid Background="Transparent" >
        <TabControl x:Name="MyTabControl" BorderThickness="0" Padding="10" HorizontalAlignment="Center" Width="448" Background="Transparent" FontSize="20" Margin="0,10,0,0">
            <TabItem Header="Вход" Margin="67,1,-68,-1">
                <Border Background="White" CornerRadius="10" Margin="42,-4,42,-4" BorderThickness="1" BorderBrush="Gray" VerticalAlignment="Top">
                    <StackPanel Orientation="Vertical" Margin="10">
                        <Label Content="Почта:" Foreground="Gray" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBox x:Name="SignInMail_textBox" Foreground="Gray" Width="315"/>
                        <StackPanel Orientation="Horizontal" Margin="5,5,5,0">

                            <Button Width="144" Margin="3,1" Content="ОТМЕНА" 
                                    Template="{StaticResource btTemplate}" 
                                    Foreground="White" 
                                    Background="OrangeRed"
                                    Height="35" Click="Close_button_Click"
                                    FontSize="17"/>

                            <Button x:Name="SignIn_button" Width="156" Margin="3,1" Content="ВОЙТИ" 
                                    Template="{StaticResource btTemplate}" 
                                    Foreground="White" 
                                    Background="MediumSeaGreen"
                                    HorizontalAlignment="Right"
                                    Height="35"
                                    FontSize="17" Click="SignIn_button_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </TabItem>

            <TabItem Header="Регистрация" Margin="0,1,-74,-1" HorizontalAlignment="Right" Width="198">
                <Border Background="White" CornerRadius="10" Margin="42,-4,42,-4" BorderThickness="1" BorderBrush="Gray" VerticalAlignment="Top">
                    <StackPanel Orientation="Vertical" Margin="10">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Фамилия:" Foreground="Gray" FontSize="20" Margin="18,0,53,0" Width="122"/>
                            <Label Content="Имя:" Foreground="Gray" FontSize="20" Margin="17,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="Surname_textBox" Foreground="Gray" Width="152" Margin="4,0,10,0"/>
                            <TextBox x:Name="Name_textBox" Foreground="Gray" Width="152"/>
                        </StackPanel>

                        <Label Content="Очество:" Foreground="Gray" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBox x:Name="SecondName_textBox" Foreground="Gray" Width="315"/>

                        <Label Content="Должность:" Foreground="Gray" FontSize="20" HorizontalAlignment="Center"/>
                        <Border CornerRadius="10" BorderThickness="1.7" BorderBrush="Gray" Margin="3,0">
                            <ComboBox x:Name="Job_comboBox" IsEditable="True" Margin="5,3" BorderThickness="0" Foreground="Gray" FontSize="17" DisplayMemberPath="JobName"/>
                        </Border>

                        <Label Content="Подразделение:" Foreground="Gray" FontSize="20" HorizontalAlignment="Center"/>
                        <Border CornerRadius="10" BorderThickness="1.7" BorderBrush="Gray" Margin="3,0">
                            <ComboBox x:Name="Subunit_comboBox" IsEditable="True" Margin="5,3" BorderThickness="0" Foreground="Gray" FontSize="17" DisplayMemberPath="SubunitName"/>
                        </Border>
                        <!--<TextBox x:Name="Job_textBox" Foreground="Gray" Width="315"/>-->

                        <Label Content="Дата рождения:" Foreground="Gray" FontSize="20" HorizontalAlignment="Center"/>
                        <Border BorderBrush="Gray" BorderThickness="1.7" CornerRadius="10" Height="35.55">
                            <DatePicker x:Name="Birthday_datePicker" SelectedDate="2005-08-05" SelectedDateFormat="Short" Foreground="Gray" Width="310" FontSize="17" VerticalAlignment="Center" Height="18" Padding="5,0,0,0" BorderThickness="0"></DatePicker>
                        </Border>
                        
                        <Label Content="Почта:" Foreground="Gray" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBox x:Name="SignUpMail_textBox" Foreground="Gray" Width="315"/>

                        <Button x:Name="SignUp_button" Width="276" Content="ЗАРЕГЕСТРИРОВАТЬСЯ" Margin="7" 
                                 Template="{StaticResource btTemplate}" 
                                 Foreground="White" 
                                 Background="MediumSeaGreen"
                                 Height="35"
                                 FontSize="17" Click="SignUp_button_Click"/>

                        <Button Width="127" Margin="3,1" Content="ОТМЕНА" 
                                 Template="{StaticResource btTemplate}" 
                                 Foreground="White" 
                                 Background="OrangeRed"
                                 Height="35" Click="Close_button_Click"
                                 FontSize="17"/>
                    </StackPanel>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
