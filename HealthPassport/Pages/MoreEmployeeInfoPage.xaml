<Window x:Class="HealthPassport.Pages.MoreEmployeeInfoPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthPassport.Pages"
        mc:Ignorable="d"
        Title="MoreEmployeeInfoPage" AllowsTransparency="True" Background="Transparent" Height="750" Width="843" WindowStyle="None" WindowStartupLocation="CenterScreen"
        FontFamily="Arial" Loaded="Window_Loaded">

    <Window.Resources>
        <!--Стиль для кнопки с закруглёнными краями-->
        <ControlTemplate TargetType="Button" x:Key="btTemplate">
            <Border x:Name="border"
                    CornerRadius="10" 
                    Background="{TemplateBinding Background}">
                <Grid 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                    <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center" 
                              Content="{TemplateBinding Content}" 
                              ContentTemplate="{TemplateBinding ContentTemplate}"/>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="LightBlue"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" CornerRadius="10" BorderThickness="1.5" BorderBrush="Gray">
                            <ContentPresenter x:Name="ContentSite"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       ContentSource="Header"
                       Margin="2,7,2,7"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Состояние для выбранного TabItem -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="Gray"/>
                                <Setter Property="FontFamily" Value="Arial Black"/>
                            </Trigger>

                            <!-- Состояние для невыбранного TabItem -->
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#a3a3a4"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontFamily" Value="Arial Black"/>
                            </Trigger>

                            <!-- Состояние при наведении на TabItem -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                 Background="White"
                                 BorderBrush="Gray"
                                 BorderThickness="1.7"
                                 CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Изменение цвета при фокусе -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="CornFlowerBlue"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--Стиль для кнопки без фона-->
        <ControlTemplate TargetType="Button" x:Key="btWithoutBackgroundTemplate">
            <Border x:Name="border">
                <Grid 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">
                    <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center" 
                              Content="{TemplateBinding Content}" 
                              ContentTemplate="{TemplateBinding ContentTemplate}"/>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="703*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="595*"/>
            <ColumnDefinition Width="59*"/>
        </Grid.ColumnDefinitions>

        <Border Background="White" Grid.Column="0" Margin="0,5,0,5" CornerRadius="10" HorizontalAlignment="Center" Width="660" BorderThickness="3" BorderBrush="Gray">
            <Label x:Name="medicalCardInfo_label" Content="Медицинская карта для: Шобик Анастасия Васильевна" Foreground="Gray" Margin="0,0,0,0" FontSize="17" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontFamily="Arial Black"/>
        </Border>

        <Border Background="White" CornerRadius="20" BorderBrush="Gray" BorderThickness="1 " Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,76,0" Grid.Row="1">

            <Border Background="Gray" CornerRadius="18" Margin="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="202*"/>
                        <ColumnDefinition Width="559*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="240*"/>
                        <RowDefinition Height="457*"/>
                    </Grid.RowDefinitions>

                    <Border Background="White" Margin="10,10,10,10" CornerRadius="10" Grid.Column="0">
                        <Grid>
                            <StackPanel VerticalAlignment="Center">
                                <Image x:Name="employeeImage" Margin="10,11,10,6" Source="/Resources/images/without_picture.png" MaxHeight="112"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Visible">
                                    <Button x:Name="uploadFromFile_button"
                                            Template="{StaticResource btTemplate}" 
                                            Height="40" Width="40"
                                            Background="Coral"
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"
                                            ToolTip="Вставить из файла">


                                        <Image Source="/resources/images/upload_from_file.png" Height="27" Width="27" Margin="0,0,0,0"/>
                                    </Button>

                                    <Button x:Name="deletePhoto_button"
                                            Template="{StaticResource btTemplate}" 
                                            Height="40" Width="40"
                                            Background="OrangeRed" 
                                            VerticalAlignment="Top"
                                            ToolTip="Удалить фото" HorizontalAlignment="Left" Margin="5,0,0,0">

                                        <Image Source="/resources/images/delete_image.png" Height="27" Width="27" Margin="0,0,0,0"/>
                                    </Button>

                                    <Button x:Name="downloadToFile_button"
                                            Template="{StaticResource btTemplate}" Width="40"
                                            Background="Coral" 
                                            Margin="5,0,0,0"
                                            ToolTip="Сохранить в файл" HorizontalAlignment="Left" Height="40">

                                        <Image Source="/resources/images/download_to_file.png" Height="27" Width="27" Margin="0,0,0,0"/>
                                    </Button>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5" Visibility="Visible">
                                    <Button x:Name="downloadToClipboard_button"
                                            Template="{StaticResource btTemplate}" 
                                            Height="40" Width="40"
                                            Background="#FF50CBFF" 
                                            VerticalAlignment="Top" 
                                            Margin="0,0,0,0"
                                            ToolTip="Сохранить в буфер">

                                        <Image Height="27" Width="27" Margin="0,0,0,0" Source="/resources/images/download_to_clipboard.png"/>
                                    </Button>
                                    <Button x:Name="uploadFromClipboard"
                                            Template="{StaticResource btTemplate}" 
                                            Height="40" Width="40"
                                            Background="#FF50CBFF" 
                                            VerticalAlignment="Top" 
                                            Margin="5,0,0,0"
                                            ToolTip="Вставить из буфера">

                                        <Image Source="/resources/images/upload_from_clipboard.png" Height="27" Width="27" Margin="0,0,0,0"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Background="White" Margin="0,10,10,10" CornerRadius="10" Grid.Column="1">
                        <Grid>
                            <StackPanel Orientation="Vertical" Margin="5,0,10,0">
                                <Label Content="Основные данные сотрудника" Foreground="Gray" FontSize="17" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Arial"/>

                                <Label FontSize="12" Content="Текущая должность" Foreground="Gray" Margin="5,-5,0,0"/>
                                <TextBox x:Name="CurrentJob_textBox" FontFamily="Arial" FontSize="15" Width="auto" Margin="5,0,0,4" Height="22"/>

                                <Label FontSize="12" Content="Полное Имя и Фамилия" Foreground="Gray" Margin="5,0,0,0"/>
                                <TextBox x:Name="FIO_textBox" Width="auto" FontFamily="Arial" FontSize="15" Margin="5,-3,0,4" Height="22"/>

                                <Label FontSize="12" Content="Последняя зарегестрированная болезнь" Foreground="Gray" Margin="5,0,0,0"/>
                                <TextBox x:Name="LastDisease_textBox" Width="auto" FontFamily="Arial" FontSize="15" Margin="5,-3,0,2" Height="22"/>


                                <StackPanel Orientation="Horizontal">
                                    <Label FontSize="12" Content="Дата рождения" Foreground="Gray" Margin="5,0,0,0"/>
                                    <Label FontSize="12" Content="Почта"  Foreground="Gray" Margin="115,0,0,0"/>

                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,-3,0,0">
                                    <TextBox x:Name="Birthday_textBox" Width="204" FontFamily="Arial" FontSize="15" Margin="5,0,0,0" Height="22"/>
                                    <TextBox x:Name="Mail_textBox" Width="320" FontFamily="Arial" FontSize="15" Margin="5,0,0,0" HorizontalAlignment="Left" Height="22"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <TabControl Grid.Row="1" Grid.ColumnSpan="2" Background="Transparent" BorderThickness="0" Margin="5">
                        <TabItem Header="Образование">
                            <Border Background="White" CornerRadius="10">

                            </Border>
                        </TabItem>

                        <TabItem Header="Должности">
                            <Border Background="White" CornerRadius="10">

                            </Border>
                        </TabItem>

                        <TabItem Header="Семейное положение">
                            <Border Background="White" CornerRadius="10">
                                
                            </Border>
                        </TabItem>

                        <TabItem Header="Антропологические исследования">
                            <Border Background="White" CornerRadius="10">

                            </Border>
                        </TabItem>

                        <TabItem Header="Прививки">
                            <Border Background="White" CornerRadius="10">

                            </Border>
                        </TabItem>

                        <TabItem Header="Заболевания">
                            <Border Background="White" CornerRadius="10">

                            </Border>
                        </TabItem>
                    </TabControl>

                </Grid>
            </Border>
        </Border>

        <StackPanel HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1">
            <Button x:Name="closeWindow_button"
                    Template="{StaticResource btTemplate}" 
                    Height="40" Width="40"
                    Background="OrangeRed"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="5,5,0,0" 
                    ToolTip="Закрыть окно"
                    Click="closeWindow_button_Click">
                <Image Source="/resources/images/delete_image.png" Height="25" Width="25" Margin="0,0,0,0"/>
            </Button>

            <Button x:Name="saveMedicalCard_button"
                    Template="{StaticResource btTemplate}" 
                    Height="40" Width="40"
                    Background="MediumSeaGreen"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="5,5,0,0" 
                    ToolTip="Закрыть окно">
                <Image Source="/resources/images/save.png" Height="32" Width="32" Margin="0,0,0,0"/>
            </Button>

            <Button x:Name="CalcToExcel_button" Grid.Column="2"
                    Template="{StaticResource btTemplate}" Width="64" Height="40"
                    Background="Gray"  
                    HorizontalAlignment="Left"
                    Margin="5,5,0,0"  
                    ToolTip="Экспортировать в Excel мед. карту">

                <Image Source="pack://application:,,,/resources/images/calcToExcel.png" Height="30" Width="50" VerticalAlignment="Top" Margin="0,0,0,0"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
