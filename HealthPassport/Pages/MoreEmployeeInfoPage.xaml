<Window x:Class="HealthPassport.Pages.MoreEmployeeInfoPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthPassport.Pages"
        mc:Ignorable="d"
        Title="MoreEmployeeInfoPage" AllowsTransparency="True" Background="Transparent" Height="750" Width="925" WindowStyle="None" WindowStartupLocation="CenterScreen"
        FontFamily="Arial" Loaded="Window_Loaded">

    <Window.Resources>

    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="703*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="76"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="76"/>
        </Grid.ColumnDefinitions>

        <Border Background="White" Grid.Column="1" Margin="0,5,0,5" CornerRadius="10" HorizontalAlignment="Center" Width="702" BorderThickness="3" BorderBrush="Gray">
            <Label x:Name="medicalCardInfo_label" Content="Медицинская карта сотрудника: Шобик Анастасия Васильевна" Foreground="Gray" Margin="0,0,0,0" FontSize="17" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontFamily="Arial Black"/>
        </Border>

        <Border Background="White" CornerRadius="20" BorderBrush="Gray" BorderThickness="1 " Grid.Column="1" Grid.ColumnSpan="3" Margin="0,0,76,0" Grid.Row="1">

            <Border Background="Gray" CornerRadius="18" Margin="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="202*"/>
                        <ColumnDefinition Width="559*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="240*"/>
                        <RowDefinition Height="408*"/>
                        <RowDefinition x:Name="sendMessageRow_dataGridRow" Height="49*"/>
                    </Grid.RowDefinitions>

                    <Border Background="White" Margin="10,10,10,10" CornerRadius="10" Grid.Column="0">
                        <Grid>
                            <StackPanel VerticalAlignment="Center">
                                <Image x:Name="employeeImage" Margin="10,11,10,6" Source="/Resources/images/without_picture.png" MaxHeight="112"/>

                                <StackPanel x:Name="fileImageButtons_stackpanel" Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Visible">
                                    <Button x:Name="uploadFromFile_button"
                                            Template="{StaticResource btTemplate}" 
                                            Height="40" Width="40"
                                            Background="#f6825d"
                                            HorizontalAlignment="Left" 
                                            VerticalAlignment="Top"
                                            ToolTip="Вставить из файла"
                                            Click="uploadFromFile_button_Click">

                                        <Image Source="/resources/images/upload_from_file.png" Height="27" Width="27" Margin="0,0,0,0"/>
                                    </Button>

                                    <Button x:Name="deletePhoto_button"
                                            Template="{StaticResource btTemplate}" 
                                            Height="40" Width="40"
                                            Background="#e94e64" 
                                            VerticalAlignment="Top"
                                            ToolTip="Удалить фото" HorizontalAlignment="Left" Margin="5,0,0,0"
                                            Click="deletePhoto_button_Click">

                                        <Image Source="/resources/images/delete_image.png" Height="25" Width="25" Margin="0,0,0,0"/>
                                    </Button>

                                    <Button x:Name="downloadToFile_button"
                                            Template="{StaticResource btTemplate}" Width="40"
                                            Background="#f6825d" 
                                            Margin="5,0,0,0"
                                            ToolTip="Сохранить в файл" HorizontalAlignment="Left" Height="40"
                                            Click="downloadToFile_button_Click">

                                        <Image Source="/resources/images/download_to_file.png" Height="27" Width="27" Margin="0,0,0,0"/>
                                    </Button>
                                </StackPanel>

                                <StackPanel x:Name="clipboardImageButtons_stackpanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5" Visibility="Visible">
                                    <Button x:Name="downloadToClipboard_button"
                                            Template="{StaticResource btTemplate}" 
                                            Height="40" Width="40"
                                            Background="#88c2d8" 
                                            VerticalAlignment="Top" 
                                            Margin="0,0,0,0"
                                            ToolTip="Сохранить в буфер"
                                            Click="downloadToClipboard_button_Click">

                                        <Image Height="27" Width="27" Margin="0,0,0,0" Source="/resources/images/download_to_clipboard.png"/>
                                    </Button>
                                    <Button x:Name="uploadFromClipboard"
                                            Template="{StaticResource btTemplate}" 
                                            Height="40" Width="40"
                                            Background="#88c2d8" 
                                            VerticalAlignment="Top" 
                                            Margin="5,0,0,0"
                                            ToolTip="Вставить из буфера"
                                            Click="uploadFromClipboard_Click">

                                        <Image Source="/resources/images/upload_from_clipboard.png" Height="27" Width="27" Margin="0,0,0,0"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Background="White" Margin="0,10,10,10" CornerRadius="10" Grid.Column="1">
                        <Grid>
                            <StackPanel Orientation="Vertical" Margin="5,0,10,0">
                                <Label Content="Основные данные сотрудника" Foreground="Gray" FontSize="17" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Arial"/>

                                <Label FontSize="12" Content="Полное Имя и Фамилия" Foreground="Gray" Margin="5,-5,0,0"/>
                                <TextBox x:Name="FIO_textBox" Width="auto" FontFamily="Arial" FontSize="15" Margin="5,-3,0,4" Height="22"
                                         TextChanged="textBox_TextChanged"/>

                                <Label FontSize="12" Content="Текущая должность" Foreground="Gray" Margin="5,0,0,0"/>
                                <TextBox x:Name="CurrentJob_textBox" FontFamily="Arial" FontSize="15" Width="auto" Margin="5,0,0,4" Height="22" IsReadOnly="True"/>

                                <Label FontSize="12" Content="Последняя зарегестрированная болезнь" Foreground="Gray" Margin="5,0,0,0"/>
                                <TextBox x:Name="LastDisease_textBox" Width="auto" FontFamily="Arial" FontSize="15" Margin="5,-3,0,2" Height="22" IsReadOnly="True"/>

                                <StackPanel Orientation="Horizontal">
                                    <Label FontSize="12" Content="Дата рождения" Foreground="Gray" Margin="5,0,0,0"/>
                                    <Label FontSize="12" Content="Почта"  Foreground="Gray" Margin="50,0,0,0"/>

                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,-3,0,0">
                                    <Border BorderBrush="Gray" BorderThickness="1.7" CornerRadius="5" Height="23" Margin="5,0,0,0">
                                        <DatePicker x:Name="Birthday_datePicker" SelectedDate="2005-08-05" SelectedDateFormat="Short" 
                                                    FontFamily="Arial" Foreground="Gray" Width="135" 
                                                    FontSize="16" VerticalAlignment="Center" Height="18" Padding="5,0,0,0" 
                                                    BorderThickness="0"
                                                    SelectedDateChanged="Birthday_datePicker_SelectedDateChanged">

                                        </DatePicker>
                                    </Border>
                                    <TextBox x:Name="Mail_textBox" Width="386" FontFamily="Arial" FontSize="15" Margin="5,0,0,0" VerticalAlignment="Center" Height="22"
                                             TextChanged="textBox_TextChanged"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <TabControl Grid.ColumnSpan="2" Background="Transparent" BorderThickness="0" Margin="10,0,10,10" Grid.Row="1">
                        <TabItem Header="Заболевания">
                            <Border Background="White" CornerRadius="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition x:Name="diseaseConrolsPanel_dataGridRow" Height="25*"/>
                                        <RowDefinition Height="139*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">

                                        <Button x:Name="removeDisease_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="35" Width="35"
                                                Background="#e94e64"
                                                VerticalAlignment="Center"
                                                Margin="6,0,0,0" 
                                                ToolTip="Удалить запись"
                                                Click="removeDisease_button_Click">
                                            <Image Source="/resources/images/delete_image.png" Height="22" Width="22" Margin="0,0,0,0"/>
                                        </Button>

                                        <Button x:Name="addDisease_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="35" Width="35"
                                                Background="DarkSeaGreen"
                                                VerticalAlignment="Center"
                                                Margin="5,0,5,0" 
                                                ToolTip="Добавить запись"
                                                Click="addDisease_button_Click">
                                            <Image Source="/resources/images/plus.png" Height="27" Width="27" Margin="0,0,0,0"/>
                                        </Button>

                                        <Button x:Name="exportDiseasesCalc_button"
                                                 Template="{StaticResource btTemplate}" 
                                                 Height="35" Width="50"
                                                 Background="#a3a3a4"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,5,0" 
                                                 ToolTip="Экспортировть болезни сотрудника в Excel"
                                                Click="exportDiseasesCalc_button_Click">
                                            <Image Source="/resources/images/calcToExcel.png" Height="35" Width="35" Margin="0,0,0,0"/>
                                        </Button>

                                        <Label Content="Название заболевания:" VerticalAlignment="Center" FontFamily="Arial" FontSize="14" Foreground="Gray"/>

                                        <TextBox x:Name="DiseaseName_textBox" Width="427" FontFamily="Arial" FontSize="15" Margin="0,0,0,0" VerticalAlignment="Center" Height="22"/>
                                    </StackPanel>

                                    <DataGrid x:Name="diseases_dataGrid" AutoGenerateColumns="False" Margin="5,5,5,5" Background="Transparent" Grid.Row="1"
                                                MinRowHeight="20" FontSize="14"
                                                CanUserAddRows="False" FontFamily="Arial" Foreground="Gray" 
                                                RowHeaderWidth="0" IsReadOnly="False"
                                                CellEditEnding="diseases_dataGrid_CellEditEnding"
                                                BeginningEdit="diseases_dataGrid_BeginningEdit"
                                                HeadersVisibility="Column" HorizontalScrollBarVisibility="Hidden"
                                                >

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Заболевание" Binding="{Binding Name}" Width="4*"/>
                                            <DataGridTextColumn Header="Дата начала" Binding="{Binding StardDiseaseDate}" Width="*"/>
                                            <DataGridTextColumn Header="Дата окончания" Binding="{Binding EndDiseaseDate}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </TabItem>

                        <TabItem Header="Должности">
                            <Border Background="White" CornerRadius="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition x:Name="jobsConrolsPanel_dataGridRow" Height="25*"/>
                                        <RowDefinition Height="138*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">

                                        <Button x:Name="removeJob_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="35" Width="35"
                                                Background="#e94e64"
                                                VerticalAlignment="Center"
                                                Margin="6,0,0,0" 
                                                ToolTip="Удалить запись"
                                                Click="removeJob_button_Click">
                                            <Image Source="/resources/images/delete_image.png" Height="22" Width="22" Margin="0,0,0,0"/>
                                        </Button>

                                        <Button x:Name="addJob_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="35" Width="35"
                                                Background="DarkSeaGreen"
                                                VerticalAlignment="Center"
                                                Margin="5,0,5,0" 
                                                ToolTip="Добавить запись"
                                                Click="addJob_button_Click">
                                            <Image Source="/resources/images/plus.png" Height="27" Width="27" Margin="0,0,0,0"/>
                                        </Button>

                                        <Button x:Name="exportJobsToCalc_button"
                                                 Template="{StaticResource btTemplate}" 
                                                 Height="35" Width="50"
                                                 Background="#a3a3a4"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,5,0" 
                                                 ToolTip="Экспортировть должности сотрудника в Excel"
                                                Click="exportJobsToCalc_button_Click">
                                            <Image Source="/resources/images/calcToExcel.png" Height="35" Width="35" Margin="0,0,0,0"/>
                                        </Button>

                                        <Label Content="Должность:" VerticalAlignment="Center" FontFamily="Arial" FontSize="14" Foreground="Gray"/>

                                            <ComboBox Style="{StaticResource RoundedComboBox}" Width="204" x:Name="Job_comboBox" Margin="0,0,0,0" BorderThickness="0" Foreground="Gray" FontSize="15" FontFamily="Arial" DisplayMemberPath="JobName"/>

                                        <Label Content="Подразделение:" VerticalAlignment="Center" FontFamily="Arial" FontSize="14" Foreground="Gray"/>

                                            <ComboBox Style="{StaticResource RoundedComboBox}" Foreground="Gray" x:Name="subunit_comboBox" DisplayMemberPath="SubunitName" Width="188"/>
                                    </StackPanel>

                                    <DataGrid x:Name="jobs_dataGrid" AutoGenerateColumns="False" Margin="5,5,5,5" Background="Transparent" Grid.Row="1"
                                                MinRowHeight="20" FontSize="14"
                                                CanUserAddRows="False" FontFamily="Arial" Foreground="Gray" 
                                                RowHeaderWidth="0" IsReadOnly="False"
                                                CellEditEnding="jobs_dataGrid_CellEditEnding"
                                                BeginningEdit="jobs_dataGrid_BeginningEdit" HeadersVisibility="Column"
                                              HorizontalScrollBarVisibility="Hidden">

                                        <DataGrid.Columns>
                                            <DataGridComboBoxColumn Header="Должность" Width="2*"
                                                                    SelectedItemBinding="{Binding JobName}">
                                                <DataGridComboBoxColumn.ElementStyle>
                                                    <Style TargetType="ComboBox">
                                                        <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.JobTypesValues}"/>
                                                        <Setter Property="FontSize" Value="14"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="FontFamily" Value="Arial"/>
                                                    </Style>
                                                </DataGridComboBoxColumn.ElementStyle>
                                                <DataGridComboBoxColumn.EditingElementStyle>
                                                    <Style TargetType="ComboBox">
                                                        <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.JobTypesValues}"/>
                                                        <Setter Property="Foreground" Value="Gray"/>
                                                        <Setter Property="FontSize" Value="14"/>
                                                        <Setter Property="FontFamily" Value="Arial"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </Style>
                                                </DataGridComboBoxColumn.EditingElementStyle>
                                            </DataGridComboBoxColumn>

                                            <DataGridComboBoxColumn Header="Подразделение" Width="2*"
                                                                    SelectedItemBinding="{Binding Subunit}">
                                                <DataGridComboBoxColumn.ElementStyle>
                                                    <Style TargetType="ComboBox">
                                                        <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.SubunitsValues}"/>
                                                        <Setter Property="FontSize" Value="14"/>
                                                        <Setter Property="FontFamily" Value="Arial"/>
                                                    </Style>
                                                </DataGridComboBoxColumn.ElementStyle>
                                                <DataGridComboBoxColumn.EditingElementStyle>
                                                    <Style TargetType="ComboBox">
                                                        <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.SubunitsValues}"/>
                                                        <Setter Property="Foreground" Value="Gray"/>
                                                        <Setter Property="FontSize" Value="14"/>
                                                        <Setter Property="FontFamily" Value="Arial"/>
                                                    </Style>
                                                </DataGridComboBoxColumn.EditingElementStyle>
                                            </DataGridComboBoxColumn>

                                            <DataGridTextColumn Header="Ставка" Binding="{Binding WorkingRate}" Width="*"/>
                                            <DataGridTextColumn Header="Дата вступления в должность" Binding="{Binding StartWorkingDate}" Width="3*"/>
                                            <DataGridTextColumn Header="Дата окончания" Binding="{Binding EndWorkingDate}" Width="2*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </TabItem>

                        <TabItem Header="Семейное положение">
                            <Border Background="White" CornerRadius="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition x:Name="familyStatusConrolsPanel_dataGridRow" Height="25*"/>
                                        <RowDefinition Height="139*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">

                                        <Button x:Name="removeFamilyStatus_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="35" Width="35"
                                                Background="#e94e64"
                                                VerticalAlignment="Center"
                                                Margin="6,0,0,0" 
                                                ToolTip="Удалить запись"
                                                Click="removeFamilyStatus_button_Click">
                                            <Image Source="/resources/images/delete_image.png" Height="22" Width="22" Margin="0,0,0,0"/>
                                        </Button>

                                        <Button x:Name="addFamilyStatus_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="35" Width="35"
                                                Background="DarkSeaGreen"
                                                VerticalAlignment="Center"
                                                Margin="5,0,5,0" 
                                                ToolTip="Добавить запись"
                                                Click="addFamilyStatus_button_Click">
                                            <Image Source="/resources/images/plus.png" Height="27" Width="27" Margin="0,0,0,0"/>
                                        </Button>

                                        <Button x:Name="exportFamilyStatusesToCalc_button"
                                                 Template="{StaticResource btTemplate}" 
                                                 Height="35" Width="50"
                                                 Background="#a3a3a4"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,5,0" 
                                                 ToolTip="Экспортировть семейные статусы сотрудника в Excel"
                                                Click="exportFamilyStatusesToCalc_button_Click">
                                            <Image Source="/resources/images/calcToExcel.png" Height="35" Width="35" Margin="0,0,0,0"/>
                                        </Button>

                                        <Label Content="Дата начала семейной жизни" FontFamily="Arial" VerticalAlignment="Center" Foreground="Gray" FontSize="14"/>
                                        <Border BorderBrush="Gray" BorderThickness="1.7" CornerRadius="5" Height="23">
                                            <DatePicker x:Name="startFamilyDate_datePicker" SelectedDate="2005-08-05" SelectedDateFormat="Short" FontFamily="Arial" Foreground="Gray" Width="135" FontSize="16" VerticalAlignment="Center" Height="18" Padding="5,0,0,0" BorderThickness="0"></DatePicker>
                                        </Border>
                                    </StackPanel>

                                    <DataGrid x:Name="familyStatuses_dataGrid" AutoGenerateColumns="False" Margin="5,5,5,5" Background="Transparent" Grid.Row="1"
                                            MinRowHeight="20" FontSize="14"
                                            CanUserAddRows="False" FontFamily="Arial" Foreground="Gray" 
                                            RowHeaderWidth="0" IsReadOnly="False"
                                            CellEditEnding="familyStatuses_dataGrid_CellEditEnding"
                                            BeginningEdit="familyStatuses_dataGrid_BeginningEdit" HeadersVisibility="Column"
                                              HorizontalScrollBarVisibility="Hidden">

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Семейный статус" Binding="{Binding Status}" Width="4*"/>
                                            <DataGridTextColumn Header="Дата начала семейной жизни" Binding="{Binding StartFamilyDate}" Width="2.2*"/>
                                            <DataGridTextColumn Header="Дата окончания" Binding="{Binding EndFamilyDate}" Width="1.2*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </TabItem>

                        <TabItem Header="Антропологические исследования">
                            <Border Background="White" CornerRadius="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition x:Name="antropologicalResearchConrolsPanel_dataGridRow" Height="25*"/>
                                        <RowDefinition Height="139*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">

                                        <Button x:Name="removeAntropologicalResearch_button"
                                                 Template="{StaticResource btTemplate}" 
                                                 Height="35" Width="35"
                                                 Background="#e94e64"
                                                 VerticalAlignment="Center"
                                                 Margin="6,0,0,0" 
                                                 ToolTip="Удалить запись"
                                                Click="removeAntropologicalResearch_button_Click">
                                            <Image Source="/resources/images/delete_image.png" Height="22" Width="22" Margin="0,0,0,0"/>
                                        </Button>

                                        <Button x:Name="addAntropologicalResearch_button"
                                                 Template="{StaticResource btTemplate}" 
                                                 Height="35" Width="35"
                                                 Background="DarkSeaGreen"
                                                 VerticalAlignment="Center"
                                                 Margin="5,0,5,0" 
                                                 ToolTip="Добавить запись"
                                                Click="addAntropologicalResearch_button_Click">
                                            <Image Source="/resources/images/plus.png" Height="27" Width="27" Margin="0,0,0,0"/>
                                        </Button>

                                        <Button x:Name="exportAntropologicalResearchesCalc_button"
                                                 Template="{StaticResource btTemplate}" 
                                                 Height="35" Width="50"
                                                 Background="#a3a3a4"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,5,0" 
                                                 ToolTip="Экспортировть антропологические исследования сотрудника в Excel"
                                                Click="exportAntropologicalResearchesCalc_button_Click">
                                            <Image Source="/resources/images/calcToExcel.png" Height="35" Width="35" Margin="0,0,0,0"/>
                                        </Button>


                                        <Label Content="Вес:" VerticalAlignment="Center" FontFamily="Arial" FontSize="14" Foreground="Gray"/>
                                        <TextBox x:Name="weight_textBox" Width="255" FontFamily="Arial" FontSize="15" Margin="0,0,0,0" VerticalAlignment="Center" Height="22" MaxLength="4"
                                                 PreviewTextInput="onlyNumbersTextBox_PreviewTextInput"/>

                                        <Label Content="Рост:" VerticalAlignment="Center" FontFamily="Arial" FontSize="14" Foreground="Gray"/>
                                        <TextBox x:Name="height_textBox" Width="255" FontFamily="Arial" FontSize="15" Margin="0,0,0,0" VerticalAlignment="Center" Height="22" MaxLength="4"
                                                 PreviewTextInput="onlyNumbersTextBox_PreviewTextInput"/>
                                    </StackPanel>

                                    <DataGrid x:Name="antropologicalResearches_dataGrid" AutoGenerateColumns="False" Margin="5,5,5,5" Background="Transparent" Grid.Row="1"
                                                 MinRowHeight="20" FontSize="14"
                                                 CanUserAddRows="False" FontFamily="Arial" Foreground="Gray" 
                                                 RowHeaderWidth="0" IsReadOnly="False"
                                                 CellEditEnding="antropologicalResearches_dataGrid_CellEditEnding"
                                                 BeginningEdit="antropologicalResearches_dataGrid_BeginningEdit" HeadersVisibility="Column"
                                              HorizontalScrollBarVisibility="Hidden">

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Вес" Binding="{Binding Weight}" Width="*"/>
                                            <DataGridTextColumn Header="Рост" Binding="{Binding Height}" Width="*"/>
                                            <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </TabItem>

                        <TabItem Header="Прививки">
                            <Border Background="White" CornerRadius="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition x:Name="vacinationConrolsPanel_dataGridRow" Height="25*"/>
                                        <RowDefinition Height="139*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">

                                        <Button x:Name="removeVaccination_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="35" Width="35"
                                                Background="#e94e64"
                                                VerticalAlignment="Center"
                                                Margin="6,0,0,0" 
                                                ToolTip="Удалить запись"
                                                Click="removeVaccination_button_Click">
                                            <Image Source="/resources/images/delete_image.png" Height="22" Width="22" Margin="0,0,0,0"/>
                                        </Button>

                                        <Button x:Name="addVaccination_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="35" Width="35"
                                                Background="DarkSeaGreen"
                                                VerticalAlignment="Center"
                                                Margin="5,0,5,0" 
                                                ToolTip="Добавить запись"
                                                Click="addVaccination_button_Click">
                                            <Image Source="/resources/images/plus.png" Height="27" Width="27" Margin="0,0,0,0"/>
                                        </Button>

                                        <Button x:Name="exportVaccinationsCalc_button"
                                                 Template="{StaticResource btTemplate}" 
                                                 Height="35" Width="50"
                                                 Background="#a3a3a4"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,5,0" 
                                                 ToolTip="Экспортировть прививки сотрудника в Excel"
                                                Click="exportVaccinationsCalc_button_Click">
                                            <Image Source="/resources/images/calcToExcel.png" Height="35" Width="35" Margin="0,0,0,0"/>
                                        </Button>

                                        <Label Content="Название прививки:" VerticalAlignment="Center" FontFamily="Arial" FontSize="14" Foreground="Gray"/>

                                        <TextBox x:Name="VaccinationName_textBox" Width="451" FontFamily="Arial" FontSize="15" Margin="0,0,0,0" VerticalAlignment="Center" Height="22"/>
                                    </StackPanel>

                                    <DataGrid x:Name="vaccinations_dataGrid" AutoGenerateColumns="False" Margin="5,5,5,5" Background="Transparent" Grid.Row="1"
                                                MinRowHeight="20" FontSize="14"
                                                CanUserAddRows="False" FontFamily="Arial" Foreground="Gray" 
                                                RowHeaderWidth="0" IsReadOnly="False"
                                                CellEditEnding="vaccinations_dataGrid_CellEditEnding"
                                                BeginningEdit="vaccinations_dataGrid_BeginningEdit" HeadersVisibility="Column"
                                              HorizontalScrollBarVisibility="Hidden">

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Прививка" Binding="{Binding Name}" Width="6*"/>
                                            <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </TabItem>

                        <TabItem Header="Образование">
                            <Border Background="White" CornerRadius="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition x:Name="educationConrolsPanel_dataGridRow" Height="25*"/>
                                        <RowDefinition Height="139*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">

                                        <Button x:Name="removeEducation_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="35" Width="35"
                                                Background="#e94e64"
                                                VerticalAlignment="Center"
                                                Margin="6,0,0,0" 
                                                ToolTip="Удалить запись"
                                                Click="removeEducation_button_Click">
                                            <Image Source="/resources/images/delete_image.png" Height="22" Width="22" Margin="0,0,0,0"/>
                                        </Button>

                                        <Button x:Name="addEducation_button"
                                                Template="{StaticResource btTemplate}" 
                                                Height="35" Width="35"
                                                Background="DarkSeaGreen"
                                                VerticalAlignment="Center"
                                                Margin="5,0,5,0" 
                                                ToolTip="Добавить запись"
                                                Click="addEducation_button_Click">
                                            <Image Source="/resources/images/plus.png" Height="27" Width="27" Margin="0,0,0,0"/>
                                        </Button>

                                        <Button x:Name="exportEducationsCalc_button"
                                                 Template="{StaticResource btTemplate}" 
                                                 Height="35" Width="50"
                                                 Background="#a3a3a4"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,5,0" 
                                                 ToolTip="Экспортировть образования сотрудника в Excel"
                                                Click="exportEducationsCalc_button_Click">
                                            <Image Source="/resources/images/calcToExcel.png" Height="35" Width="35" Margin="0,0,0,0"/>
                                        </Button>

                                        <Label Content="Учреждение:" VerticalAlignment="Center" FontFamily="Arial" FontSize="14" Foreground="Gray"/>

                                        <TextBox x:Name="EducationInstitutionName_textBox" Width="229" FontFamily="Arial" FontSize="15" Margin="0,0,0,0" VerticalAlignment="Center" Height="22"/>

                                        <Label Content="Уровень:" VerticalAlignment="Center" FontFamily="Arial" FontSize="14" Foreground="Gray"/>

                                            <ComboBox Style="{StaticResource RoundedComboBox}" x:Name="EducationType_comboBox" Width="202" BorderThickness="0" Foreground="Gray" FontSize="15" FontFamily="Arial" DisplayMemberPath="EducationLevelName"/>
                                    </StackPanel>

                                    <DataGrid x:Name="educations_dataGrid" AutoGenerateColumns="False" Margin="5,5,5,5" Background="Transparent" Grid.Row="1"
                                                MinRowHeight="20" FontSize="14"
                                                CanUserAddRows="False" FontFamily="Arial" Foreground="Gray" 
                                                RowHeaderWidth="0" IsReadOnly="False"
                                                CellEditEnding="educations_dataGrid_CellEditEnding"
                                                BeginningEdit="educations_dataGrid_BeginningEdit" HeadersVisibility="Column"
                                              HorizontalScrollBarVisibility="Hidden">

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Учреждение образования" Binding="{Binding EducationInstitution}" Width="4*"/>

                                            <DataGridComboBoxColumn Header="Уровень образования" Width="1.5*"
                                                                    SelectedItemBinding="{Binding EducationType}">
                                                <DataGridComboBoxColumn.ElementStyle>
                                                    <Style TargetType="ComboBox">
                                                        <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.EducationLevelsValue}"/>
                                                        <Setter Property="FontSize" Value="14"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="FontFamily" Value="Arial"/>
                                                    </Style>
                                                </DataGridComboBoxColumn.ElementStyle>
                                                <DataGridComboBoxColumn.EditingElementStyle>
                                                    <Style TargetType="ComboBox">
                                                        <Setter Property="ItemsSource" Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}, Path=DataContext.EducationLevelsValue}"/>
                                                        <Setter Property="Foreground" Value="Gray"/>
                                                        <Setter Property="FontSize" Value="14"/>
                                                        <Setter Property="FontFamily" Value="Arial"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </Style>
                                                </DataGridComboBoxColumn.EditingElementStyle>
                                            </DataGridComboBoxColumn>

                                            <!--<DataGridTextColumn Header="Уровень образования" Binding="{Binding EducationType}" Width="1.5*"/>-->
                                            <DataGridTextColumn Header="Дата окончания" Binding="{Binding Date}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </TabItem>

                    </TabControl>

                    <Border CornerRadius="10" Grid.Row="2" Grid.ColumnSpan="2" Margin="10,0,10,10" Background="White">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Cообщение для сотрудника:" FontFamily="Arial" Foreground="Gray" FontSize="14" VerticalAlignment="Center" Margin="3,0,0,0"/>
                            <TextBox x:Name="sendMessage_textBox" Width="503" FontFamily="Arial" FontSize="15" VerticalAlignment="Center" Height="22"/>
                            <Button x:Name="sendMessage_button"
                                    Template="{StaticResource btTemplate}" 
                                    Height="30" Width="30"
                                    Background="DarkSeaGreen"
                                    VerticalAlignment="Center"
                                    Margin="5,0,0,0" 
                                    ToolTip="Отправить сообщение на почту"
                                    Click="sendMessage_button_Click">
                                <Image Source="/resources/images/sendMessage.png" Margin="-2,2,0,0" Height="25" Width="25"/>
                            </Button>
                        </StackPanel>
                    </Border>

                </Grid>
            </Border>
        </Border>

        <StackPanel HorizontalAlignment="Left" Grid.Column="2" Grid.Row="1">
            <Button x:Name="closeWindow_button"
                    Template="{StaticResource btTemplate}" 
                    Height="40" Width="40"
                    Background="#e94e64"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="5,5,0,0" 
                    ToolTip="Закрыть окно"
                    Click="closeWindow_button_Click">
                <Image Source="/resources/images/delete_image.png" Height="25" Width="25" Margin="0,0,0,0"/>
            </Button>

            <Button x:Name="CalcToExcel_button" Grid.Column="2"
                    Template="{StaticResource btTemplate}" Width="64" Height="40"
                    Background="Gray"  
                    HorizontalAlignment="Left"
                    Margin="5,5,0,0"  
                    ToolTip="Экспортировать в Excel мед. карту"
                    Click="CalcToExcel_button_Click">

                <Image Source="pack://application:,,,/resources/images/calcToExcel.png" Height="30" Width="50" VerticalAlignment="Top" Margin="0,0,0,0"/>
            </Button>

            <Image x:Name="nextEmployee_button"  ToolTip="Следующий сотрудник"
                   Source="/Resources/images/arrowRightWithBorder.png" Margin="0,200,0,0"
                   RenderTransformOrigin="0.5,0.5" Height="42" Width="31"
                   MouseDown="nextEmployee_button_MouseDown">
                <Image.RenderTransform>
                    <RotateTransform Angle="0"/>
                </Image.RenderTransform>
            </Image>
        </StackPanel>

        <Image x:Name="prevEmployee_button"  ToolTip="Предыдущий сотрудник" Grid.Row="1"
               Source="/Resources/images/arrowRightWithBorder.png" Margin="0,0,0,78" VerticalAlignment="Center"
               RenderTransformOrigin="0.5,0.5" Height="42" Width="31"
               MouseDown="prevEmployee_button_MouseDown">
            <Image.RenderTransform>
                <RotateTransform Angle="180"/>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
